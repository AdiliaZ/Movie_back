@page
@model Movie_back.Pages.User_pageModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="css/userpage_style.css">
    <title>Movies</title>
    <style>
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            padding-top: 100px;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
        }


        .modal_content {
            background-color: black;
            margin: auto;
            padding: 20px;
            width: 80%;
        }

        .edit {
            margin-left: 180px;
        }

        .info_edit {
            list-style: none;
            display: table-cell;
        }

        .edit_li_2 {
            margin-bottom: 35px;
        }

        .edit_li_1 {
            margin-bottom: 40px;
            margin-right: 30px;
        }

        #myBtn {
            background: transparent;
            width: max-content;
            line-height: 14px;
            border: none;
            margin-top: 4px;
        }

        .edit_text-profile2 {
            background: transparent;
            text-decoration: none;
            width: 300px;
            height: 44px;
            border-width: 0.5px;
            border-style: solid;
            border-color: rgba(255, 255, 255, 0.3);
            text-align: center;
            color: white;
            font-family: Content, sans-serif;
            font-size: 15px;
            outline: none;
        }

        /* The Close Button */
        .close {
            color: #aaaaaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: #000;
                text-decoration: none;
                cursor: pointer;
            }
    </style>
</head>
<body>
    <header class="header">
        <nav class="nav_header">
            <div class="logo">
                <a class="home" href="homepage.html">
                    <h3 class="logo-text">
                        MOVIES
                    </h3>
                </a>
            </div>
            <div class="nav_links">
                <ul class="ul_links">
                    <li>
                        <a asp-area="" asp-page="My_List" class="n_links">My List</a>
                    </li>
                    <li>
                        <button id="myBtn" class="n_links">settings</button>
                    </li>
                </ul>
                <div id="settingsModal" class="modal">
                    <div class="modal_content">
                        <span class="close">&times;</span>
                        <div class="edit">
                            <ul class="info_edit">
                                <li class="edit_li_1">
                                    <p class="text-profile">username:</p>
                                </li>
                                <li class="edit_li_1">
                                    <p class="text-profile">e-mail:</p>
                                </li>
                                <li class="edit_li_1">
                                    <p class="text-profile">password:</p>
                                </li>
                                <li class="edit_li_1">
                                    <p class="text-profile">confirm password:</p>
                                </li>
                            </ul>
                            <ul class="info">
                                <li class="edit_li_2">
                                    <input class="edit_text-profile2" placeholder="new username">
                                </li>
                                <li class="edit_li_2">
                                    <input class="edit_text-profile2" placeholder="new e-mail">
                                </li>
                                <li class="edit_li_2">
                                    <input class="edit_text-profile2" placeholder="password">
                                </li>
                                <li class="edit_li_2">
                                    <input class="edit_text-profile2" placeholder="confirm password">
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <script>
                    // Get the modal
                    var modal = document.getElementById("settingsModal");

                    // Get the button that opens the modal
                    var btn = document.getElementById("myBtn");

                    // Get the <span> element that closes the modal
                    var span = document.getElementsByClassName("close")[0];

                    // When the user clicks the button, open the modal
                    btn.onclick = function () {
                        modal.style.display = "block";
                    }

                    // When the user clicks on <span> (x), close the modal
                    span.onclick = function () {
                        modal.style.display = "none";
                    }

                    // When the user clicks anywhere outside of the modal, close it
                    window.onclick = function (event) {
                        if (event.target == modal) {
                            modal.style.display = "none";
                        }
                    }
                </script>
            </div>
            <div class="search-container">
                <input type="text" placeholder="Search">
                <div class="search"></div>
            </div>
            <div class="user">
                <img class="user-img" src="netflix_assects/cat.png">
            </div>
        </nav>
        <div class="container">
            <h3 class="account-title">Account</h3>
            <img class="userpic" src="netflix_assects/Pic16.png">
            <div class="information">

                <ul class="info">
                    <li class="li_1">
                        <p class="text-profile">username:</p>
                    </li>
                    <li class="li_1">
                        <p class="text-profile">e-mail:</p>
                    </li>
                    <li class="li_1">
                        <p class="text-profile">country:</p>
                    </li>
                </ul>
                <ul class="info">
                    <li class="li_2">
                        <p class="text-profile2">hu</p>
                    </li>
                    <li class="li_2">
                        <p class="text-profile2">@Model.Email</p>
                    </li>
                    <li class="li_2">
                        <select class="country">
                            <option disabled selected>Choose Country</option>
                            <option>Russia</option>
                            <option>Not Russia</option>
                        </select>
                    </li>
                </ul>
                <a asp-page="Index" asp-page-handler="Logout">Logout</a>
            </div>
            <div class="about-section">
                <p class="about">about me:</p>
                <textarea class="about_text" disabled maxlength="20">i fucking hate this shit</textarea>
            </div>
        </div>
    </header>

</body>
</html>